#include <stdio.h> 
#include <stdlib.h> 

int r(int n) 
{ 
int i; 
int a[100],x,b; 
for(i=0;i<n;i++) 
{ 
scanf("%d",&a[i]); 
} 
x=a[0]; 
b=a[0]; 
for( i=0;i<n;i++) 
{ 
if(a[i]<x) 
{ 
x=a[i]; 
} 
if(a[i]>b) 
{ 
b=a[i]; 
} 

} 
return b-x; 
} 

int main() 
{ 
int N ; 
scanf("%d",&N); 
printf("%d",r(N)); 
return 0; 
}
